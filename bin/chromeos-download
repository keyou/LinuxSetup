#!/bin/bash

url="$1"
url="${url%/}"
dir="${url##*/}"
# wget need a / in the end of url,or recursive will recursive error.
url="${url}/"

[ ! -d "$dir" ] && mkdir -p "$dir"
# pushd "$dir"
# wget --recursive --no-parent --no-directories "$url" \
#     --accept="update*" 
# wget --recursive --no-parent -nd "$url" \
#     --accept="signed*" \
#     --accept="ec.bin" 
# wget --recursive -np -nd "$url" \
#     --accept="branch*" \
#     --accept="diff*" \
#     --accept="sym*"
# popd

wget --mirror --no-parent --no-directories --directory-prefix=$dir $url
rm $dir/index.html

echo Saved to "$dir"

