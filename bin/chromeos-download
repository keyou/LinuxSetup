#!/bin/bash

url="$1"
#dir="${url: -16}"
dir="${url%/}"
dir="${dir##*/}"

[ ! -d "$dir" ] && mkdir -p "$dir"
pushd "$dir"
wget --recursive --no-parent -nd "$url" \
    --accept="update*" 
wget --recursive --no-parent -nd "$url" \
    --accept="signed*" \
    --accept="ec.bin" 

popd

echo Saved to "$dir"

